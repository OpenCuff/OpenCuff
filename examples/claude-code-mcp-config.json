{
  "mcpServers": {
    "opencuff": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "/path/to/OpenCuff",
        "fastmcp",
        "run",
        "src/opencuff/server.py:mcp"
      ],
      "env": {
        "OPENCUFF_SETTINGS": "/path/to/your/settings.yml"
      }
    }
  }
}
